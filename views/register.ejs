<%- include ("./partials/_header") %>

  <section class="vh-100 gradient-custom" style="background-color: #28869e;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">

              <div class="container">
                <a>
                  <img src="/images/logo.png" height="50" alt="">
                </a>
              </div>
              <div class="mt-md-4 pb-5">

                <p class="h1 font-weight-bold">Regístrate</p>
                <p class="text-white-50 mb-5">Introduce tu email y contraseña</p>
                
                <form action="/register" method="POST">
                  <div class="form-outline form-white mb-4">
                    <label class="form-label" for="name" style="float: left;">Nombre</label>
                    <input type="text" id="name" name="name" class="form-control form-control-lg" placeholder="Juan Pérez"/>
                    
                  </div>

                  <div class="form-outline form-white mb-4">
                    <label class="form-label" for="email" style="float: left;">Email</label>
                    <input type="email" id="email" name="email" class="form-control form-control-lg" placeholder="correo@gmail.com"/>
                    
                  </div>

                  <div class="form-outline form-white mb-4">
                    <label class="form-label" for="password" style="float: left;">Password</label>
                    <input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="••••••••"/>
                    
                  </div>

                  <div class="form-outline form-white mb-4">
                    <label class="form-label" for="department" style="float: left;">Seleccione el departamento</label>
                    <select id="department" name="departmentId" class="form-control">
                      <% for (var i = 0; i < departmentList.length; i++) { %>
                        <option value=<%= departmentList[i].id %>><%= departmentList[i].name %></option>
                      <%  }   %>
                    </select>
                    
                  </div>
                  <button class="btn btn-outline-light btn-lg px-5" type="submit">Regístrate</button>
                </form>
              </div>

              <div>
                <p class="mb-0">Ya estás registrado? <a href="/login" class="text-white-50 fw-bold">Inicia sesión</a></p>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</body>
<%- include ("./partials/_footer") %>